<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="175.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to right top, #241044, #36246c, #433b98, #4b54c7, #486ff9);" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controlers.ChangeName">
    <Label alignment="CENTER" layoutX="136.0" layoutY="92.0" text="You want to change your name?" textFill="WHITE">
        <font>
            <Font size="23.0" />
        </font>
    </Label>
    <TextField fx:id="name" layoutX="45.0" layoutY="38.0" prefHeight="37.0" prefWidth="534.0" promptText="Email address" style="                 -fx-background-color:  transparent;                 -fx-background-insets: 0 0 -2 0, 0 0 0 0;                 -fx-border-width: 0;                 -fx-background-radius: 0, 0, 0, 0;                 -fx-prompt-text-fill: #c4c4c4;                 -fx-text-fill: white;">
